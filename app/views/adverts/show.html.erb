<div class="col-xs-12">
  <h1><%= @advert.title %></h1>
  <p><%= @advert.description %></p>
  <h4><b><%= @advert.price %>€</b></h4>
  <h4><%= @advert.location %></h4>
  <% @advert.photos.each do |photo| %>
    <%= cl_image_tag photo.path, :transformation=>[
          {:width=>400, :height=>300, crop: :fill}] %>
  <% end %>
</div>


<%= link_to "retour à la liste", adverts_path, class: "btn btn-primary"  %>
